<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="js/table.js" type="text/javascript"></script>
    <title>Table</title>
</head>

<style>
    body {
        padding: 0px;
        margin: 0;
        /* font-family: Verdana, Geneva, Tahoma, sans-serif; */
    }
    
    table {
        width: 100%;
    }
    
    tr {
        transition: all .2s ease-in;
    }
    
    th,
    td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    
    #header {
        background-color: #16a085;
        color: #fff;
    }
    
    h1 {
        font-weight: 600;
        text-align: center;
        background-color: #16a085;
        color: #fff;
        padding: 10px 0px;
    }
    
    .entries:hover {
        background-color: #f5f5f5;
        /* transform: scale(1.02); */
        box-shadow: 2px 2px 12px rgba(0, 0, 0, 0.2), -1px -1px 8px rgba(0, 0, 0, 0.2);
        cursor: pointer;
    }
    
    @media only screen and (max-width: 768px) {
        table {
            width: 90%;
        }
    }

    #popup {
        position:absolute;
        width: 400px;
        height: 450px;
        background-color: #22242A;
        top:0;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;
        visibility: hidden;
        box-shadow: 2px 2px 12px rgba(0, 0, 0, 0.2), -1px -1px 8px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        padding-left: 30px;
        padding-right: 30px;
    }

    #resaccType {
        width: 100%;
        height: 50px;
        font-size: 17px;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 0 15px;
        margin-bottom: 15px;
    }

    #close_btn {
        text-align: center;
        width: 20px;
    }

    #close_btn:hover {
        cursor: pointer;
        background-color: crimson;
    }

    .result {
        color: white;
    }
</style>

<body>

    <form id="popup" method="post" action="/newAccounts?fName={{details.fName}}&lName={{details.lName}}&dept={{details.dept}}&email={{details.email}}&accType={{details.accType}}">
        <p class="result" id="close_btn">x</p>
        <p class="result" id="resfName"></p>
        <p class="result" id="reslName"></p>
        <p class="result" id="resdept"></p>
        <p class="result" id="resemail"></p>
        <!--<p class="result" id="resaccType"></p>-->
        <select name="resaccType" id="resaccType">
			<option value="NONE" selected>NONE</option>
			<option value="REG">REG</option>
			<option value="ADMIN">ADMIN</option>
		</select>
        <input type="submit" id="submit" value="Verify">
        </input>
    </form>

    <h1>{{tableName}}</h1>
    <hr>

    <table>
        <tr id="header">
            <th>First name</th>
            <th>Last name</th>
            <th>Department</th>
            <th>Email</th>
            <th>Account Type</th>
        </tr>
        {{#each newAccs}}
        <tr class="entries">
            <td class="fName">{{fName}}</td>
            <td class="lName">{{lName}} </td>
            <td class="dept">{{dept}}</td>
            <td class="email">{{email}}</td>
            <td class="accType">{{accType}}</td>
        </tr>
        {{/each}}
        {{#each allAccs}}
        <tr class="entries">
            <td class="fName">{{fName}}</td>
            <td class="lName">{{lName}} </td>
            <td class="dept">{{dept}}</td>
            <td class="email">{{email}}</td>
            <td class="accType">{{accType}}</td>
        </tr>
        {{/each}}
    </table>
</body>

</html>